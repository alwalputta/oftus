<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "/WEB-INF/classes/struts-2.1.7.dtd">

<struts>

    <constant name="struts.devMode" value="true"/>

    <package name="myapp" extends="struts-default" namespace="">

        <action name="index">
            <result>/WEB-INF/results/index.jsp</result>
        </action>

        <action name="welcome">
            <result>/WEB-INF/results/welcome.html</result>
        </action>

        <action name="login_faq">
            <result>/WEB-INF/results/login_faq.html</result>
        </action>

        <action name="register_faq">
            <result>/WEB-INF/results/register_faq.html</result>
        </action>

        <action name="forgot_password_faq">
            <result>/WEB-INF/results/forgot_password_faq.html</result>
        </action>

        <action name="reset_password_faq">
            <result>/WEB-INF/results/reset_password_faq.html</result>
        </action>

        <action name="new_bookmark_faq">
            <result>/WEB-INF/results/new_bookmark_faq.html</result>
        </action>

        <action name="forgot_password_form">
            <result>/WEB-INF/results/forgot_password.html</result>
        </action>

        <action name="release_notes">
            <result>/WEB-INF/results/release_notes.html</result>
        </action>

        <action name="quick_guide">
            <result>/WEB-INF/results/quick_guide.html</result>
        </action>

        <action name="user_guide">
            <result>/WEB-INF/results/user_guide.html</result>
        </action>

        <action name="" class="com.myapp.action.IndexAction" method="execute">
            <result name="success">/WEB-INF/results/mainpage.jsp</result>
            <result name="input">/WEB-INF/results/index.jsp</result>
        </action>
        
        <action name="login" class="com.myapp.action.LoginAction" method="execute">
            <result name="success">/WEB-INF/results/mainpage.jsp</result>
            <result name="input">/WEB-INF/results/index.jsp</result>
        </action>

        <action name="logout" class="com.myapp.action.LogoutAction" method="execute">
            <result name="success">/WEB-INF/results/index.jsp</result>
            <result name="fail">/WEB-INF/results/mainpage.jsp</result>
        </action>

        <action name="register_form" class="com.myapp.action.GeneralAction" method="execute">
            <result name="success">/WEB-INF/results/register.jsp</result>
            <result name="input">/WEB-INF/results/index.jsp</result>
        </action>

        <action name="create_profile" class="com.myapp.action.RegisterAction" method="createProfile">
            <result name="success">/WEB-INF/results/mainpage.jsp</result>
            <result name="input">/WEB-INF/results/register.jsp</result>
        </action>

        <action name="edit_profile" class="com.myapp.action.GeneralAction" method="editProfile">
            <result name="success">/WEB-INF/results/edit_profile.jsp</result>
            <result name="input">/WEB-INF/results/mainpage.jsp</result>
        </action>

        <action name="update_profile" class="com.myapp.action.RegisterAction" method="updateProfile">
            <result name="success">/WEB-INF/results/mainpage.jsp</result>
            <result name="input">/WEB-INF/results/edit_profile.jsp</result>
        </action>

        <action name="list_categories">
            <result>/WEB-INF/results/list_categories.jsp</result>
        </action>

        <action name="edit_category" class="com.myapp.action.CategoryAction" method="editCategory">
            <interceptor-ref name="validation">
                <param name="excludeMethods">validate, editCategory</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack"/>
            <result name="success">/WEB-INF/results/edit_category.jsp</result>
            <result name="input">/WEB-INF/results/list_categories.jsp</result>
        </action>

        <action name="update_category" class="com.myapp.action.CategoryAction" method="updateCategory">
            <result name="success">/WEB-INF/results/list_categories.jsp</result>
            <result name="input">/WEB-INF/results/edit_category.jsp</result>
        </action>

        <action name="test">
            <result>/WEB-INF/results/header.jsp</result>
        </action>
        <action name="test1">
            <result>/WEB-INF/results/mainpage.jsp</result>
        </action>
        <action name="test2">
            <result>/WEB-INF/results/HomeStuffMaster.jsp</result>
        </action>

    </package>

</struts>
