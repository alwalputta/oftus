
<constant name="struts.devMode" value="true">
    <package extends="struts-default" name="default" namespace="/">
        <interceptors>
            <interceptor class="com.myapp.struts.LoginInterceptor" name="loginInterceptor"></interceptor>
            <interceptor-stack name="loginStack">
                <interceptor-ref name="loginInterceptor">
                    <interceptor-ref name="defaultStack">
                    </interceptor-ref>
                </interceptor-ref>

                <default-interceptor-ref name="loginStack">

                    <global-results>  
                        <result name="login_form">/WEB-INF/results/login_form.jsp</result>
                    </global-results>

                    <action class="com.myapp.action.LoginAction" name="loginAuthenticaion">
                        <result name="login-success">/WEB-INF/results/mainpage.jsp</result>
                        <result name="input_form">/WEB-INF/results/login_form.jsp</result>
                    </action>
  
                </default-interceptor-ref>
            </interceptor-stack>
        </interceptors>
    </package>
</constant>

